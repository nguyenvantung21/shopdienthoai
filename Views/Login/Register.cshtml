@model ShopPhone.Models.Khachhang
@{
    Layout = null;
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/logincss/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/logincss/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Nhanh tay đăng kí để nhận khuyến mãi lên đến 50%</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Đăng kí</h3>
                        <form action="Register" method="post" class="signin-form">
                            <div class="form-group">
                                <input asp-for="TenKhachHang" type="text" class="form-control" placeholder="Tên khách hàng" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="TaiKhoanKh" type="text" class="form-control" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="MatKhau" id="password-field" type="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Sdt" type="text" class="form-control" placeholder="Số điện thoại" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="DiaChi" type="text" class="form-control" placeholder="Địa chỉ" required>
                            </div>
                            <div class="form-group">
                                <input asp-for="Email" type="text" class="form-control" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Đăng kí</button>
                            </div>
                        </form>
                        <p class="w-100 text-center">&mdash; Or Sign In With &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.Raw(TempData["msg"])
    </section>

    <script src="/logincss/js/jquery.min.js"></script>
    <script src="/logincss/js/popper.js"></script>
    <script src="/logincss/js/bootstrap.min.js"></script>
    <script src="/logincss/js/main.js"></script>

</body>
</html>

