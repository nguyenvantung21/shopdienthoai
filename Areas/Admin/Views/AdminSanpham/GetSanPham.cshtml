@model IEnumerable<ShopPhone.Models.Sanpham>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Home";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-header row">
            <div class="content-header-left col-md-4 col-12 mb-2">
                <h3 class="content-header-title">Tables</h3>
            </div>
            <div class="content-header-right col-md-8 col-12">
                <div class="breadcrumbs-top float-md-right">
                    <div class="breadcrumb-wrapper mr-1">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="index.html">Home</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Tables
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <!-- Basic Tables start -->
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <p>
                                @Html.ActionLink("Thêm sản phẩm", "Create")
                            </p>
                            <h4 class="card-title">Danh sách sản phẩm:</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Mã sản phẩm</th>
                                                <th>Tên sản phẩm</th>
                                                <th>Mã hãng</th>
                                                <th>Ảnh</th>
                                                <th>Mô tả</th>
                                                <th>Số lượng</th>
                                                <th>Đơn giá</th>
                                                <th>Chức năng</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <th scope="row">@item.MaSanPham</th>
                                                    <td>@item.TenSanPham</td>
                                                    <td>@item.MaDanhMuc</td>
                                                    <td>
                                                        <img src="~/images/@item.Anh" height="50" width="50" />
                                                    </td>
                                                    <td>@item.MoTa</td>
                                                    <td>@item.SoLuong</td>
                                                    <td>@item.GiaTien</td>
                                                    <td>
                                                        <a asp-action="Edit" asp-controller="AdminSanpham" asp-area="Admin" asp-route-id="@item.MaSanPham">Edit</a> |
                                                        <a asp-action="Delete" asp-controller="AdminSanpham" asp-area="Admin" asp-route-id="@item.MaSanPham" >Delete</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @Html.Raw(TempData["msgdelete"])
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>